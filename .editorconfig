# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Basic defaults
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.cmd]
end_of_line = crlf

[*.sln]
end_of_line = crlf

[*.yml]
indent_size = 2
